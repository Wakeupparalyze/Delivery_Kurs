<Window x:Class="Delivery_Kurs.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Delivery_Kurs"
        mc:Ignorable="d"
        Title="MainWindow" Height="300" Width="500" Background="Gray" MinHeight="300" MinWidth="500">
    <StackPanel VerticalAlignment="Center">
        <Label HorizontalAlignment="Center" Content="Авторизация"/>
        <Label HorizontalAlignment="Center" Content="Логин"/>
        <TextBox Background="LightGray" MinWidth="120" HorizontalAlignment="Center"/>
        <Label HorizontalAlignment="Center" Content="Пароль"/>
        <TextBox Background="LightGray" MinWidth="120" HorizontalAlignment="Center"/>
        <Button Click="AuthBtn" Background="LightGray" Margin="0 10 0 10" MinWidth="80" Content="Войти" HorizontalAlignment="Center"/>
        <Button Click="RegistrationBtn" Background="LightGray" MinWidth="80" Content="Регистрация" HorizontalAlignment="Center"/>
    </StackPanel>
</Window>
