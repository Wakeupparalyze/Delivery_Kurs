<Window x:Class="Delivery_Kurs.HomeWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Delivery_Kurs"
        mc:Ignorable="d"
        Title="Main" Height="450" Width="800" MinHeight="450" MinWidth="800">  
    <Grid Background="Gray">
        <Grid.RowDefinitions>
            <RowDefinition Height="60"/>
            <RowDefinition/>
        </Grid.RowDefinitions>
        <StackPanel Grid.Row="0">
            <Label Content="240-88-88" FontSize="20"/>
            <Label Content="Доставка еды во Владивостоке"/>
        </StackPanel>
        <StackPanel Grid.Row="1">
            <Label Content=" телефон тех.поддержки:+7777-777-7777" Opacity="0.5"/>
        </StackPanel>
        <StackPanel Orientation="Horizontal" HorizontalAlignment="Right">
            <Label Margin="0 8 0 0" Content="В Корзине нет товаров" Opacity="0.5"/>
            <!--Text="{Binding basket}"-->

            <Label Margin="0 8 0 0" Content="Баланс:"/>
            <Button Click="BasketBtn" Background="LightGray" Margin="10" VerticalAlignment="Top" Content="Корзина"/>
            <Button Click="ExitBtn" Background="LightGray" Margin="10" VerticalAlignment="Top" Content="Выход"/>
        </StackPanel>
    </Grid>
</Window>
