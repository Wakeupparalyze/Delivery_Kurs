<Window x:Class="Delivery_Kurs.AdminWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Delivery_Kurs"
        mc:Ignorable="d"
        Title="AdminWindow" Background="Gray" MinHeight="450" MinWidth="800" Height="450" Width="800">
    <Grid>
        <StackPanel HorizontalAlignment="Right" Orientation="Horizontal">
            <Button Click="AddDishBtn" Background="LightGray" Margin="0 0 5 0" Content="Добавление блюда" VerticalAlignment="Top"/>
            <Button Background="LightGray" Margin="0 0 5 0" Content="Заказы" MinWidth="80" VerticalAlignment="Top"/>
            <Button Click="ExitBtn" Background="LightGray" Content="Выход" MinWidth="80" VerticalAlignment="Top"/>
        </StackPanel>
    </Grid>
</Window>
