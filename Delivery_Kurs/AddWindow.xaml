<Window x:Class="Delivery_Kurs.AddWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Delivery_Kurs"
        mc:Ignorable="d"
        Background="Gray"
        Title="AddWindow" Height="300" Width="500" MinHeight="300" MinWidth="500">
    <Grid>
        <Button Content="Назад" MinWidth="70" HorizontalAlignment="Right" VerticalAlignment="Top"/>
        <StackPanel Background="Gray" Grid.Row="1" VerticalAlignment="Center">
            <Label Content="Добавление Блюда" HorizontalAlignment="Center"/>
            <Label Content="Название блюда"/>
            <TextBox Background="LightGray"/>
            <Label Content="Состав блюда"/>
            <TextBox Background="LightGray"/>
            <Button MinWidth="80" Content="Сохранить" Background="LightGray" HorizontalAlignment="Center"/>
        </StackPanel>
    </Grid>
</Window>
