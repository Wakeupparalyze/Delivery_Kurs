<Window x:Class="Delivery_Kurs.CourierWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Delivery_Kurs"
        mc:Ignorable="d"
        Title="CourierWindow" MinHeight="450" MinWidth="800" Height="450" Width="800" Background="Gray">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition/>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>
        <StackPanel Grid.Column="0">
            <Label Content="Текущие заказы:"/>
            <ListBox x:Name="MyOrders">
                
            </ListBox>
        </StackPanel>
        <Label Grid.Column="1" Content="Свободные заказы:"/>
        <StackPanel Grid.Column="1" >
            <Button MinWidth="80" HorizontalAlignment="Right" Content="Выйти"/>
            <ListBox x:Name="AvailableOrders" Margin="0 6 0 0">
                <ListBoxItem />
            </ListBox>
        </StackPanel>
    </Grid>
</Window>
